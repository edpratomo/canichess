        <!-- div class="row" -->
        <div class="row justify-content-center">
          <div class="col-12 col-md-6">
            <!-- Custom Tabs -->
            <div class="card card-primary">
              <div class="card-header d-flex p-0">
                <%= render 'select_standings_by_group', group: group, round: round %>
              </div>
              <div class="card-body table-responsive p0">
                <table class="table table-bordered table-striped text-nowrap">
                  <thead>
                    <tr>
                      <th style="width: 2%">#</th>
                      <th>Name</th>
                      <th style="width: 2%">Points</th>
                      <% unless group.is_swiss_system? %>
                        <th style="width: 2%">SB</th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                  <% standings.each_with_index do |standing, idx| %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td><%= standing.tournaments_player.name %>
                          <span style="padding-right: 10px;" class="text-warning"><small><%= standing.tournaments_player.start_rating %></small></span>
                          <%= blacklisted_icon(standing) %>
                      </td>
                      <td><%= standing.points %></td>
                      <% unless group.is_swiss_system? %>
                        <td><%= standing.sb %></td>
                      <% end %>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
