<% if @tournament_player.nil? %>
  <% content_for :page_title do %> <%= @tournament.name %> - <small>Error</small><% end %>
  <p class="lead">Oops! Player not found.</p>
<% else %>
  <% content_for :page_title do %> <%= @tournament.name %> - <small><%= @tournament_player.name %></small><% end %>
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <!-- Custom Tabs -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title"><%= @tournament_player.name %> </h3>
        </div>
        <div class="card-body table-responsive p0">
          <table class="table table-bordered table-striped text-nowrap">
            <thead>
              <tr>
                <th style="width: 2%">Rd</th>
                <th style="width: 2%">Brd #</th>
                <th>White</th>
                <th>Black</th>
                <th style="text-align:center;">Result</th>
              </tr>
            </thead>
            <tbody>
            <% (1..@tournament.rounds).each do |round| %>
              <tr>
              <% board = @games[round - 1] %>
              <% if round <= @games.size %>
                <td class="text-center"><%= link_to board.round, pairings_path(round) %></td>
                <td class="text-center"><%= board.number %></td>
                <td <%= same_player?(@tournament_player, board.white) ? raw('class="text-info"') : ''  %>><%= board.white ? board.white.name : '<BYE>' %></td>
                <td <%= same_player?(@tournament_player, board.black) ? raw('class="text-info"') : ''  %>><%= board.black ? board.black.name : '<BYE>' %></td>
                <td style="text-align:center;"><%= chess_result(board.result) %></td>
              <% else %>
                <td class="text-center"><%= round %></td><td/><td/><td/><td/>
              <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div> <!-- /.col -->
  </div> <!-- /.row -->
<% end %>
