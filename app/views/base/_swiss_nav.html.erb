          <% current_round = @tournament ? @tournament.current_round : 0 %>
          <% completed_round = @tournament ? @tournament.completed_round : 0 %>

          <li class="nav-item">
            <% if current_round > 0 %>
              <%= link_to "Pairings", pairings_tournaments_path(@tournament, current_round), class: "nav-link" %>
            <% else %>
              <span class="nav-link disabled">Pairings</span>
            <% end %>
          </li>
          <li class="nav-item">
            <% if completed_round > 0 %>
              <%= link_to 'Standings', standings_tournaments_path(@tournament, completed_round), class: "nav-link" %>
            <% else %>
              <span class="nav-link disabled">Standings</span>
            <% end %>
          </li>
