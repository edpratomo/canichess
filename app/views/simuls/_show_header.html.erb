<div class="row justify-content-center">
  <div class="col-auto d-flex align-items-center">
    <h2><%= image_tag(simul.logo_url, alt: "Simul Logo", style: "max-width: 100px; opacity: .8") %></h2>
    <div class="d-flex flex-column align-items-center ms-3 p-2">
      <h2 class="mb-1 mt-2"><%= simul.name %></h2>
      <% if simul.description and !simul.description.empty? %>
        <h4 class="mb-1 mt-2"><%= simul.description %></h4>
      <% end %>
    </div>
  </div>
</div>
