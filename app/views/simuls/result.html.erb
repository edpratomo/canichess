    <div class="row">
      <div class="col-12">
        <!-- Widget: user widget style 2 -->
        <div class="card card-widget widget-user-2 shadow-sm">
          <div class="widget-user-header bg-warning">
            <div class="row">
              <div class="col-sm-10">
                <div class="widget-user-image">
                  <%= image_tag(@simul.logo, class: "img-circle elevation-2", alt: "CCE CCAD Logo", style: "opacity: .8") %>
                </div>
                <!-- /.widget-user-image -->
                <h3 class="widget-user-username"><%= @simul.name %></h3>
                <h5 class="widget-user-desc">by <%= @simul.simulgivers || "A Secret Master"%></h5>
              </div>
              <div class="col-sm-2">
                <div style="vertical-align: middle" data-controller="simul-score">
                  <h1 id="simul_score"><%= simul_score(@simul) %></h1>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card -->
        <div class="card card-primary">
          <div class="card-body" data-controller="simul-result">
            <%= render 'result_body', players: @players, col_size: 5 %>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
