<% enabled = group.current_round == 0 && group.sufficient_players? %>
<% if enabled %>
  <%= link_to start_group_admin_tournaments_path(tournament, group), method: :patch, class: "btn btn-primary btn-sm" do %>
    <i class="fas fa-flag-checkered"></i> Start
  <% end %>
<% else %>
  <%= button_tag class: "btn btn-primary btn-sm", disabled: true do %>
    <i class="fas fa-flag-checkered"></i> Start
  <% end %>
<% end %>

<%#= link_to edit_group_admin_tournaments_path(group), class: "btn btn-info btn-sm" do %>
<%= link_to edit_admin_tournament_group_path(tournament, group), class: "btn btn-info btn-sm" do %>
  <i class="fas fa-pencil-alt"></i> Edit
<% end %>

<%= link_to group_admin_tournaments_players_path(tournament, group), class: "btn btn-success btn-sm" do %>
  <i class="fas fa-pencil-alt"></i> Players
<% end %>
