<%= form_with(model: admin_simul, url: form_url, html: { role: "form"}) do |form| %>
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">
      <% if admin_simul.new_record? %>
        Create Simul Event
      <% else %>
        Editing Simul Event
      <% end %>
      </h3>
    </div>
    <div class="card-body">
      <% if admin_simul.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(admin_simul.errors.count, "error") %> prohibited this admin_simul from being saved:</h2>

          <ul>
            <% admin_simul.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group row">
        <%= form.label :name, class: "control-label col-sm-3" do %>
        Name <span class="required">*</span>
        <% end %>
        <div class="col-sm-4">
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-3 col-sm-4">
          <div class="form-check">
            <%= form.check_box :fp, class: "form-check-input" %>
            <%= form.label :fp, "Front page" %>
          </div>
        </div>
        <div class="offset-sm-3 col-sm-4">
          <div class="form-check">
            <%= form.check_box :listed, class: "form-check-input" %>
            <%= form.label :listed, "Listed on Dropdown menu" %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :logo, class: "control-label col-sm-3" do %>
        Logo 
        <% end %>
        <div class="col-sm-4 input-group">
          <div class="custom-file">
            <%= form.file_field :logo, class: "custom-file-input", required: false %>
            <label class="custom-file-label">Choose file</label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :description, class: "control-label col-sm-3" do %>
        Description
        <% end %>
        <div class="col-sm-4">
          <%= form.text_area :description, size: "70x3", class: "form-control", 
                                           placeholder: "Tell us a bit about this simul event" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :date, "Date", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= form.date_select :date %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :location, class: "control-label col-sm-3" do %>
        Location
        <% end %>
        <div class="col-sm-4">
          <%= form.text_area :location, size: "70x3", class: "form-control", placeholder: "Venue for this event" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :simulgivers, class: "control-label col-sm-3" do %>
        Simul Givers
        <% end %>
        <div class="col-sm-4">
          <%= form.text_field :simulgivers, class: "form-control" %>
        </div>
      </div>

      <div class="row ">
        <%= form.label :playing_color, class: "col-sm-3 control-label" do %>
        Playing Color
        <% end %>
        <div class="col-sm-5" data-controller="other-field">
          <div class="form-group clearfix">
            <div class="icheck-primary">
              <%= form.radio_button :playing_color, "black", data: { action: "change->other-field#toggle" } %>
              <%= form.label "playing_color_black", "All Play Black" %>
            </div>
            <div class="icheck-primary">
              <%= form.radio_button :playing_color, "white", data: { action: "change->other-field#toggle" } %>
              <%= form.label "playing_color_white", "All Play White" %>
            </div>
            <div class="icheck-primary d-flex align-items-center">
              <%= form.radio_button :playing_color, "alternate_color", data: { action: "change->other-field#toggle" } %>
              <%= form.label "playing_color_alternate_color", "Alternate Color Every", class: "mb-0 me-2" %>
              <div class="d-flex align-items-center p-2" style="width: 200px;" data-other-field-target="otherField">
                <%= form.number_field :alternate_color, class: "form-control", default: 1 %>
                <span class="ms-2 p-2">board(s)</span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    <!-- ./card-body -->
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
      <%= link_to "Cancel", admin_simul.new_record? ? admin_simuls_path : admin_simul_path(admin_simul), type: "button", class: "btn btn-secondary" %>
    </div>
    <!-- /.card-footer-->
  </div>
<% end %>
