<%= turbo_frame_tag dom_id(admin_tournaments_player) do %>
  <%= form_with(model: admin_tournaments_player, url: admin_tournaments_player_path(admin_tournaments_player), 
                method: :patch, data: { turbo_frame: "_top" }) do |form| %>
    <% if admin_tournaments_player.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(admin_tournaments_player.errors.count, "error") %> prohibited this admin_tournaments_player from being saved:</h2>

        <ul>
          <% admin_tournaments_player.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card card-primary">
      <div class="card-body">
        <div class="sm-4">
          <%= form.collection_select :group_id, admin_tournaments_player.tournament.groups,
              :id, :name, {}, { class: "form-control select2bs4" } %>
        </div>
      </div>
      <div class="card-footer">
        <%= form.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Cancel", tournament_admin_tournaments_players_path(admin_tournaments_player.tournament),
            type: "button", class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
<% end %>
