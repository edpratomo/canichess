<%= turbo_frame_tag("player_labels_#{admin_tournament.id}") do %>
  <%= link_to edit_player_labels_admin_tournaments_path(admin_tournament), class: "btn btn-warning btn-sm" do %>
    <i class="fas fa-plus"></i> New Label
  <% end %>

  <% admin_tournament.player_labels.each_with_index do |label, label_idx| %>
    <%= label %>

    <%= link_to delete_player_label_admin_tournaments_path(admin_tournament, label_idx), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger ml-2" do %>
      <button type="button" class="btn btn-tool p-0">
        <i class="fas fa-times"></i>
      </button>
    <% end %>

    <%= ' | ' unless label == admin_tournament.player_labels.last %>
  <% end %>
<% end %>
