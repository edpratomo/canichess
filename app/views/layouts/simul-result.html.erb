<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Canichess Alumni</title>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <meta name="turbolinks-visit-control" content="reload">

  <%= favicon_link_tag asset_path('canichess.ico') %>
</head>

<body class="hold-transition layout-top-nav dark-mode">
<div class="wrapper">

  <!-- Navbar -->
  <% unless android_webview? %>
    <%= render 'base/top_nav/navbar', eventable: @simul, group: nil, msconfig: nil %>
  <% end %>
  <!-- /.navbar -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-8">
            <h1 class="m-0"><%= yield :page_title %></h1>
          </div><!-- /.col -->
          <div class="col-sm-4">
            <%= yield :breadcrumb_items %>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
      <%= yield %>
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="float-right d-none d-sm-inline">
      Ad Maiorem Dei Gloriam
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; 2023, 2024, 2025, 2026 <a href="/">Canichess Alumni</a>.</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

</body>
<script type="application/json" data-controller="android-menu" data-android-menu-target="menuData">
  <%= raw json_escape(generate_menu(@tournament || @simul, @group)) %>
</script>
</html>
