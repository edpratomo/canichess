          <div class="col-lg-6">
            <div class="card card-primary">
              <div class="card-header d-flex p-0">
                <%= render 'select_standings_by_rounds', tournament: tournament, round: round %> 
              </div>
              <div class="card-body">
                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th style="width: 2%">#</th>
                      <th>Name</th>
                      <th style="width: 2%">Points</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% standings.each_with_index do |standing, idx| %>
                    <tr>
                      <td><%= idx + offset + 1 %></td>
                      <td><%= standing.tournaments_player.name %> <%= blacklisted_icon(standing) %></td>
                      <td><%= standing.points %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

