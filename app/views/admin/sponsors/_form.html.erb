<%= form_with(model: admin_sponsor, url: admin_sponsor.new_record? ? admin_sponsors_path : admin_sponsor_path(admin_sponsor)) do |form| %>
  <% if admin_sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_sponsor.errors.count, "error") %> prohibited this admin_sponsor from being saved:</h2>

      <ul>
        <% admin_sponsor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">
      <% if admin_sponsor.new_record? %>
        Create Sponsor
      <% else %>
        Editing Sponsor: <%= admin_sponsor.name %>
      <% end %>
      </h3>
    </div>

    <div class="card-body">
      <div class="form-group row">
        <%= form.label :name, "Name", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= form.text_field :name, class: "form-control", placeholder: "Sponsor's name" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :url, "URL", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= form.text_field :url, class: "form-control", placeholder: "Sponsor's URL" %>
        </div>
      </div>
      <div class="form-group row">
        <%=form.label :logo, "Logo", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= form.file_field :logo, class: "form-control" %>
        </div>
      </div>
    </div> <!-- /.card-body -->
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="button" class="btn btn-default float-right" name="cancel">Cancel</button>
    </div> <!-- /.card-footer -->
  </div> <!-- /.card -->
<% end %>
