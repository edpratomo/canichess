<%= form_with(model: admin_player, url: admin_player_path) do |form| %>
  <% if admin_player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_player.errors.count, "error") %> prohibited this admin_player from being saved:</h2>

      <ul>
        <% admin_player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <div class="form-group row">
      <%= form.label :name, "Name", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :name, class: "form-control", placeholder: "Full name" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :fide_id, "FIDE ID", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-2">
        <%= form.text_field :fide_id, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :rating, "Canichess Rating", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-2">
        <%= form.text_field :rating, class: "form-control", disabled: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :phone, "Phone Number", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-2">
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :email, "Email", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :graduation_year, "CC Alumni", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-2">
        <%= form.text_field :graduation_year, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :affiliation, "Affiliation", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-2">
        <%= form.select :affiliation, %w[N/A alumni alumni_relatives student invitee staff], {}, {class: "select2bs4 form-control"} %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :ccm_awarded_at, "CCM Title Awarded at", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-4">
        <%= form.select :ccm_awarded_at, indexed_events, {prompt: "Select event"}, {class: "select2bs4 form-control"} %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :remarks, "Remarks", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_area :remarks, class: "form-control" %>
      </div>
    </div>

  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
