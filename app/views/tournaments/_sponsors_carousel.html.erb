<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% if tournament.sponsors.empty? %>
      <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
    <% else %>
      <% tournament.sponsors.each_with_index do |sponsor,idx| %>
        <li data-target="#carouselIndicators" data-slide-to="<%= idx %>"<% if idx == 0 %> class="active"<% end %>></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% if tournament.sponsors.empty? %>
      <div class="carousel-item active">
        <%= image_tag("canichess-alumni-slide.webp", alt: "Canichess Alumni", class: "d-block w-100") %>
      </div>
    <% else %>
      <% tournament.sponsors.each_with_index do |sponsor,idx| %>
        <div class="carousel-item<% if idx == 0 %> active<% end %>">
          <%= link_to image_tag(sponsor.logo, alt: sponsor.name, class: "d-block w-100"), sponsor.url, target: "_blank" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
    <span class="carousel-control-custom-icon" aria-hidden="true">
      <i class="fas fa-chevron-left"></i>
    </span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
    <span class="carousel-control-custom-icon" aria-hidden="true">
      <i class="fas fa-chevron-right"></i>
    </span>
    <span class="sr-only">Next</span>
  </a>
</div>
