<p id="notice"><%= notice %></p>

<% content_for :page_title do %>Tournaments<% end %>
<table class="table table-bordered table-hover text-nowrap">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tournaments.each do |tournament| %>
      <tr>
        <td><%= link_to tournament.name, admin_tournament_path(tournament) %></td>
        <td><%= link_to_if tournament.completed_round > 0, 'Standings', round_admin_standings_path(tournament, tournament.completed_round)  %></td>
        <td><%= tournament.current_round == 0 ? "Not started yet" : (tournament.completed_round == tournament.rounds ? "Completed" : "On going") %></td>
        <td><%= link_to 'Destroy', '#', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
