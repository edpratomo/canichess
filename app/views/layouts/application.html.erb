<!DOCTYPE html>
<html>
  <head>
    <title>Canichess Tournament Manager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'boards', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'tournaments', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'tournaments_players', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'simuls_players', 'data-turbolinks-track': 'reload' %>

    <meta name="turbolinks-visit-control" content="reload">

    <%= favicon_link_tag asset_path('canichess.ico') %>
  </head>

  <body data-scrollbar-auto-hide="n" class="hold-transition sidebar-mini layout-fixed">
    <div><%= render "flash_toastr" %></div>
      <div class="wrapper">
        <%= render "base/header" %>
        <%= render "base/sidebar" %>

        <div class="content-wrapper">
          <div class="content-header">
            <div class="container-fluid">
              <div class="row mb-2">
                <div class="col-sm-6">
                  <h1 class="m-0 text-dark"><%= yield :page_title %></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                  <%= breadcrumbs style: :bootstrap4, class: "breadcrumb float-sm-right" %>
                </div><!-- /.col -->
              </div><!-- /.row -->
            </div><!-- /.container-fluid -->
          </div>
        <div class="content container-fluid">
            <div class="container-fluid">
              <%= yield %>
            </div>
          </div>
        </div>

        <%= render "base/footer" %>
        <%= render "base/control_sidebar" %>
      </div>
  </body>
</html>
