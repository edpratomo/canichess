

<% content_for :page_title do %>Simuls<% end %>
<div class="card card-primary card-outline">
  <div class="card-body table-responsive p0">

  <table class="table table-striped projects text-nowrap">
    <thead>
      <tr>
        <th width="5%"></th>
        <th style="width: 20%">Name</th>
        <th>Progress</th>
        <th style="width: 8%" class="text-center">Status</th>
        <th style="width: 20%"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_simuls.each do |simul| %>
        <% percentage = simul.percentage_completion %>
        <tr>
          <td style="vertical-align: middle;"><%= image_tag simul.logo_thumb if simul.logo.attached? %></td>
          <td><%= link_to simul.name, admin_simul_path(simul) %><%= raw(' <i class="fas fa-solid fa-star text-warning"></i>') if simul.fp %></td>
          <td class="project_progress">
            <div class="progress progress-sm">
              <div class="progress-bar bg-<%= percentage == 100 ? 'info' : 'green' %>" role="progressbar" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= percentage %>%"></div>
            </div>
            <small>
              <%= percentage %>% Complete
            </small>
          </td>
          <td class="project-state">
            <%= simul_status_badge(simul) %>
          </td>
          <td class="project-actions text-right">
            <%= link_to result_admin_simuls_players_path(simul), class: "btn btn-primary btn-sm" do %>
              <i class="fas fa-folder"></i> Results
            <% end %>
            <%= link_to edit_admin_simul_path(simul), class: "btn btn-info btn-sm" do %>
              <i class="fas fa-pencil-alt"></i> Edit
            <% end %>
            <%= link_to simul_admin_simuls_players_path(simul), class: "btn btn-success btn-sm" do %>
              <i class="fas fa-pencil-alt"></i> Players
            <% end %>
            <%= link_to admin_simul_path(simul), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
              <i class="fas fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
