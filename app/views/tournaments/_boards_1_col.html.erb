<div class="row justify-content-center">
  <div class="col-auto d-flex align-items-center">
    <h2><%= image_tag(@tournament.logo, alt: "Tournament Logo", style: "max-width: 60px; opacity: .8") %></h2>
    <div class="d-flex flex-column align-items-center ms-3 p-3">
      <h2 class="mb-1 mt-2"><%= @tournament.name %></h2>
      <div>
        <h4>
        <% if group %>
          <a class="nav-link info dropdown-toggle" data-toggle="dropdown" href="#">
                      CLUB <%= group.name %> <span class="caret"></span>
                    </a>
                    <div class="dropdown-menu">
                    <% groups.each do |group| %>
                      <%= link_to("CLUB #{group.name}", 
                                  group_pairings_tournaments_path(tournament, group, @round) + 
                                  (params[:full] && params[:full] == "1" ? "?full=1" : ""),
                                  class: "dropdown-item") %>
                    <% end %>
                    </div>

        <% end %>
        </h4>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center" data-controller="scoreboard">
  <%= render 'boards', boards: boards, tournament: tournament, group: group, round: round  %>
</div>
<!-- /.row -->