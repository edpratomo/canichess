<% breadcrumb :players_list %>

<div class="row">
  <div class="col-md-10">
    <div class="card card-primary card-outline">
      <div class="card-body table-responsive p-3">
        <table id="datatable_with_search" class="table table-bordered table-hover text-nowrap">
          <thead>
            <tr>
              <th style="width: 1%">#</th>
              <th>Name</th>
              <th>CCM Awarded at</th>
              <th>Email</th>
              <th>FIDE</th>
              <th style="text-align:center; width: 10%">Affiliation</th>
              <th style="text-align:center; width: 8%">Year</th>
              <th style="text-align:center; width: 8%">Rating</th>
              <th style="width: 20%"></th>
            </tr>
          </thead>
          <tbody>
    <% @admin_players.each_with_index do |player,idx| %>
      <tr>
        <td style="vertical-align: middle;" class="text-right"><%= idx + 1 %></td>
        <td style="vertical-align: middle;"><%= player.name %></td>
        <td style="vertical-align: middle;"><%= player.ccm_awarded_at ? player.ccm_awarded_at.eventable.name : '' %></td>
        <td style="vertical-align: middle;"><%= player.email %></td>
        <td style="vertical-align: middle;"><%= player.fide_id %></td>
        <td style="vertical-align: middle;"><%= player.affiliation %></td>
        <td style="vertical-align: middle;" class="text-center"><%= player.graduation_year %></td>
        <td style="vertical-align: middle;" class="text-center"><%= player.rating %></td>
        <td class="project-actions text-center">
            <%= link_to admin_player_path(player), class: "btn btn-primary btn-sm" do %>
              <i class="fas fa-folder"></i>View
            <% end %>
            <%= link_to edit_admin_player_path(player), class: "btn btn-info btn-sm" do %>
              <i class="fas fa-pencil-alt"></i>Edit
            <% end %>
            <%= link_to admin_player_path(player), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
              <i class="fas fa-trash"></i> Delete
            <% end %>
        </td>
      </tr>
    <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
