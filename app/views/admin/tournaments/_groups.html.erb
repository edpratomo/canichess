<%= turbo_frame_tag("groups_#{admin_tournament.id}") do %>
  <%= link_to new_admin_tournament_group_path(admin_tournament), class: "btn btn-warning btn-sm" do %>
    <i class="fas fa-plus"></i> New Group
  <% end %>

  <% admin_tournament.groups.each do |group| %>
    <%= link_to group.name, group_show_admin_tournaments_path(@admin_tournament, group), target: :_blank %>
  
    <%= link_to admin_tournament_group_path(admin_tournament, group), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger ml-2" do %>
      <button type="button" class="btn btn-tool p-0">
        <i class="fas fa-times"></i>
      </button>
    <% end %>

    <%= ' | ' unless group == admin_tournament.groups.last %>
  <% end %>
<% end %>
